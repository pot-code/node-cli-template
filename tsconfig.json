{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "types": [
      "node",
      "vitest/globals"
    ],
    "declaration": false,
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}