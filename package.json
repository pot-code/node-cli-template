{
  "version": "0.0.1",
  "scripts": {
    "test": "jest",
    "test:watch": "test --watch",
    "build:clean": "rm -rf build/*",
    "build:base": "esbuild src/main.ts --bundle --platform=node --format=esm --outfile=build/app.js --external:./node_modules/*",
    "build:prod": "npm run build:clean && npm run build:base -- --minify",
    "build:dev": "npm run build:base -- --sourcemap",
    "build:watch": "npm run build:dev -- --watch"
  },
  "bin": "build/app.js",
  "files": [
    "build"
  ],
  "keywords": [
    "node",
    "template"
  ],
  "type": "module",
  "author": "pot-code",
  "license": "GPL",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "babel-jest": "^28.1.1",
    "esbuild": "^0.14.44",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "commander": "^9.3.0",
    "winston": "^3.7.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "no-bitwise": "off",
      "no-console": "warn",
      "no-param-reassign": "off",
      "no-plusplus": "off",
      "implicit-arrow-linebreak": "off",
      "operator-linebreak": "off",
      "no-underscore-dangle": "warn",
      "no-unused-vars": "warn",
      "max-len": "off"
    },
    "ignorePatterns": [
      "setup",
      "*.test.ts"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ],
          "@babel/typescript"
        ]
      }
    }
  }
}